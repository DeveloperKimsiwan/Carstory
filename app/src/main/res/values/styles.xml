<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/grey_4</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColorHint">@color/grey_4</item>
        <item name="android:textColorHighlight">@color/grey_6</item>
    </style>

    <style name="TextInputHintStyle" parent="TextAppearance.AppCompat">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/grey_4</item>
        <item name="android:textSize">@dimen/x_large_text_size</item>
    </style>

</resources>