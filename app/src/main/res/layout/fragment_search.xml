<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.like.drive.motorfeed.ui.search.viewmodel.SearchViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.fragment.SearchFragment"
    android:background="@color/white_100">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStartMargin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEndMargin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearchBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/search_tag"
            android:imeOptions="actionDone"
            android:padding="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey_4"
            android:textSize="@dimen/normal_text_size"
            android:maxLength="9"
            android:text="@={vm.tagValue}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="@string/search_tag" />


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incFilter"
        layout="@layout/layout_search_filter"
        app:layout_constraintTop_toBottomOf="@id/etSearchBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:vm="@{vm}"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/enable_button_rect_true_solid_black_false_light_grey3_conner"
        android:textColor="@color/btn_text_enable_color"
        app:layout_constraintTop_toBottomOf="@id/incFilter"
        app:layout_constraintStart_toStartOf="@id/glStartMargin"
        app:layout_constraintEnd_toEndOf="@id/glEndMargin"
        android:enabled="@{vm.motorType!=null || vm.feedType!=null || (!vm.tagValue.empty &amp;&amp; vm.tagValue!=null)}"
        android:text="@string/filter_complete"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>