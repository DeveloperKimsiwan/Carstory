<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="commentFragmentExtra"
            type="com.like.drive.motorfeed.ui.feed.data.CommentFragmentExtra" />

        <variable
            name="vm"
            type="com.like.drive.motorfeed.ui.feed.detail.viewmodel.FeedDetailViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:visibility="@{commentFragmentExtra.commentUpdate ? View.GONE: View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/containerCommentEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glStart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="15dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="15dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glTop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/activity_small_margin" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/activity_small_margin" />

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toTopOf="@id/glTop"
                    app:profileImg="@{commentFragmentExtra.commentData.userInfo.profileImgUrl}"
                    tools:background="@drawable/oval_stroke_grey_6_size_32" />

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_small_margin"
                    android:text="@{commentFragmentExtra.commentData.userInfo.nickName!=null ? commentFragmentExtra.commentData.userInfo.nickName :`` }"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size"
                    app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                    app:layout_constraintEnd_toEndOf="@id/glEnd"
                    app:layout_constraintStart_toEndOf="@id/ivProfile"
                    app:layout_constraintTop_toTopOf="@id/ivProfile"
                    tools:text="모터피드 " />


                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:scrollbars="vertical"
                    android:text="@{commentFragmentExtra.commentData.commentStr!=null ? commentFragmentExtra.commentData.commentStr : ``}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size"
                    app:layout_constraintEnd_toEndOf="@id/glEnd"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@id/nickName"
                    tools:text="댓글댓글댓글" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="@color/grey_4"
                    android:textSize="@dimen/normal_text_size"
                    app:formatDate="@{commentFragmentExtra.commentData.updateDate}"
                    app:layout_constraintBottom_toBottomOf="@id/glBottom"
                    app:layout_constraintStart_toStartOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@id/tvComment"
                    tools:text="2020.08.06" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerCommentEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/comment_hint"
                android:maxLines="3"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@={vm.reComment}"
                android:textSize="@dimen/normal_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvRegisterComment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

            <TextView
                android:id="@+id/tvRegisterComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="@{()->vm.commentFragmentClickListener(commentFragmentExtra,etComment.text)}"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/enrollment_text"
                android:textColor="@color/text_enable_color"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                app:commentFragmentValue="@{commentFragmentExtra}"
                app:commentStr="@{vm.reComment}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/etComment"
                app:layout_constraintTop_toTopOf="parent"
                tools:enabled="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>