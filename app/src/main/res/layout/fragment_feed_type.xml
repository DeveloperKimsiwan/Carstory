<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.feed.type.fragment.FeedTypeFragment"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvFeedTypeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="start|center_vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/white_100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/feed_type_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFeedType"
            android:layout_width="0dp"
            android:background="@color/white_100"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFeedTypeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/holder_feed_type_item"
            tools:itemCount="3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>