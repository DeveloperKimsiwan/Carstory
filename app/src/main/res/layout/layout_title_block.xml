<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="feedData"
            type="com.like.drive.motorfeed.data.feed.FeedData" />
        <import type="android.view.View"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/activity_vertical_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/activity_vertical_margin" />


    <TextView
        android:id="@+id/tvMotorType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_solid_grey_6_conner"
        android:padding="@dimen/activity_x_small_margin"
        android:textColor="@color/grey_3"
        android:textSize="@dimen/small_text_size"
        android:visibility="@{feedData.brandName !=null ?View.VISIBLE:View.GONE}"
        app:detailModelCode="@{feedData.modelCode}"
        app:detailBrandName="@{feedData.brandName}"
        app:detailModelName="@{feedData.modelName}"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toTopOf="@id/glTop"
        tools:text="기아|다이소" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text_size"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvMotorType"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:layout_marginTop="@dimen/activity_small_margin"
        android:maxLines="2"
        android:text="@{feedData.title}"
        tools:text="가나다라마바사아차카타파하라라라라라라라라라라라라라라라라라라라라라"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStart"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/activity_x_small_margin"
        android:textColor="@color/grey_4"
        app:formatDate="@{feedData.updateDate}"
        tools:text="2020.08.06"
        app:layout_constraintBottom_toBottomOf="@id/glBottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>