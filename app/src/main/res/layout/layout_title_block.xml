<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/activity_vertical_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/activity_vertical_margin" />


    <TextView
        android:id="@+id/tvMotorType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStart"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintTop_toTopOf="@id/glTop"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/white_100"
        android:padding="@dimen/activity_x_small_margin"
        android:background="@drawable/rect_solid_black_conner"
        tools:text="기아|다이소"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x_large_text_size"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvMotorType"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        android:layout_marginTop="@dimen/activity_small_margin"
        android:maxLines="2"
        tools:text="가나다라마바사아차카타파하라라라라라라라라라라라라라라라라라라라라라"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/glStart"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/activity_x_small_margin"
        android:textColor="@color/grey_4"
        tools:text="2020.08.06"
        app:layout_constraintBottom_toBottomOf="@id/glBottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>